<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <title>Create Transaction</title>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">

    <!-- Navigation Bar -->
    <nav class="bg-gray-800 p-4">
        <div class="container mx-auto flex justify-between items-center">
            <a href="#" class="text-white text-lg font-bold">Gestion de portefeuille</a>
            <div class="flex items-center space-x-4">
                <a href="/" class="text-gray-300 hover:text-white">Home</a>
                <a href="/category" class="text-gray-300 hover:text-white">Category</a>
                <a href="/transaction" class="text-gray-300 hover:text-white">Services</a>
                <a href="#" class="text-gray-300 hover:text-white">Contact</a>
                <form action="/logout" method="get" class="flex items-center">
                    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <main class="flex-grow flex items-center justify-center">
        <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold mb-6 text-gray-800">Create Transaction</h2>
            
            <form action="/transaction" method="POST" id="transactionForm">
                <div class="mb-4">
                    <label for="type" class="block text-gray-700 font-medium mb-2">Type</label>
                    <select id="type" name="type" class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
                        <option value="" disabled>Select transaction type</option>
                        <option value="revenus">Revenus</option>
                        <option value="dépenses">Dépenses</option>
                    </select>
                    <span id="typeError" class="text-red-500 text-sm"></span>
                </div>
            
                <div class="mb-4">
                    <label for="amount" class="block text-gray-700 font-medium mb-2">Amount</label>
                    <input type="number" id="amount" name="amount" class="w-full px-3 py-2 border border-gray-300 rounded-lg" placeholder="Enter amount" step="0.01" required>
                    <span id="amountError" class="text-red-500 text-sm"></span>
                </div>
            
                <div class="mb-4">
                    <label for="date" class="block text-gray-700 font-medium mb-2">Date</label>
                    <input type="date" id="date" name="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
                    <span id="dateError" class="text-red-500 text-sm"></span>
                </div>
            
                <div class="mb-4">
                    <label for="category" class="block text-gray-700 font-medium mb-2">Category</label>
                    <select id="category" name="category_id" class="w-full px-3 py-2 border border-gray-300 rounded-lg" required>
                        <option value="" disabled>Select categories</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                        <% }) %>
                    </select>
                    <span id="categoryError" class="text-red-500 text-sm"></span>
                </div>
            
                <div class="mb-4">
                    <input type="number" id="user_id" value="<%= user.id %>" hidden name="user_id" class="w-full px-3 py-2 border border-gray-300 rounded-lg" placeholder="Enter user ID" required>
                </div>
                
                <div>
                    <button type="submit" class="w-full bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">Submit</button>
                </div>
            </form>
            
        
          
            
        </div>
    </main>
<script src="/js/transaction.js"></script>
</body>
</html>
